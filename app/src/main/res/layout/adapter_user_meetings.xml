<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_et"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView_date_user_m_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,10,10"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_group_name_user_m_adapter"
            app:layout_constraintStart_toStartOf="@+id/textView_group_name_user_m_adapter"
            app:layout_constraintTop_toBottomOf="@+id/textView_group_name_user_m_adapter" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_m_adapter"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/logo"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="0.2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_group_name_user_m_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Group Name"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_user_m_adapter"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_hour_user_m_adapter"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="10:10"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_date_user_m_adapter"
            app:layout_constraintStart_toStartOf="@+id/textView_date_user_m_adapter"
            app:layout_constraintTop_toBottomOf="@+id/textView_date_user_m_adapter" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>