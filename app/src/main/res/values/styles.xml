<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Calender" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:selectableItemBackgroundBorderless">@color/background</item>
        <item name="android:textColorPrimary">@color/oppBackground</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/oppBackground</item> <!--days of the month-->
        <item name="colorControlHighlight">@color/oppBackground</item>
    </style>

    <style name="Clock" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:selectableItemBackgroundBorderless">#393939</item>
        <item name="android:textColorPrimary">#494949</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/oppBackground</item> <!--days of the month-->
        <item name="colorControlHighlight">@color/oppBackground</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
